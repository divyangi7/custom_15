<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <template id="report_property_offer">
    <t t-call="web.html_container">
        <t t-call="web.external_layout">
           <t t-foreach="docs" t-as="doc">
               <t t-esc="doc"/>
               <div class="page">
                   <h2>
                       <span t-field="doc.name"/>
                   </h2>
                        <div>
                            <strong>Salesman:</strong>
                            <span t-field="doc.salesman"/>
                        </div>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="doc.expected_price"/>
                        </div>
                        <div>
                            <strong>Status:</strong>
                            <span t-field="doc.state"></span>
                        </div>
                    <table class="table table-sm o_main_table">
                        <t t-set="offers" t-value="property_offer.mapped('offer_ids')"/>
                               <t t-foreach="docs" t-as="doc">
                                   <th>
                                       <th name="th_price" >Price</th>
                                       <th name="th_partner_id">Partner</th>
                                       <th name="th_validity">Validity</th>
                                       <th name="th_date_deadline">Dead Line</th>
                                       <th name="th_status" >Status</th>
                                   </th>
                               </t>
                    </table>
               </div>
           </t>
        </t>
    </t>
  </template>
</odoo>








